{
  "css.validate": false,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#3a3a3a",
    "activityBar.background": "#3a3a3a",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#787828",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#3a3a3a",
    "statusBar.background": "#212121",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#3a3a3a",
    "statusBarItem.remoteBackground": "#212121",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#212121",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#21212199",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#212121",

  "editor.detectIndentation": false,
  "search.exclude": {
    "package-lock.json": true
  },
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",

  "editor.codeActionsOnSave": [
    "source.addMissingImports",
    "source.fixAll.eslint"
  ],

  // Multiple language settings for json and jsonc files
  "[json][jsonc][yaml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.ignorePath": ".gitignore", // Don't run prettier for files listed in .gitignore
  "tailwindCSS.includeLanguages": {
    "html": "html",
    "javascript": "javascript",
    "css": "css",
    "typescript": "typescript",
    "typescriptreact": "typescriptreact"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
