// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Player {
  id           Int    @id @default(autoincrement())
  name         String @unique
  str          Int
  agi          Int
  vit          Int
  int          Int
  dex          Int
  luk          Int
  health       Int
  maxHealth    Int
  maxMana      Int
  mana         Int
  job          String
  baseLevel    Int
  jobLevel     Int
  baseExp      Int
  jobExp       Int
  maxBaseExp   Int
  maxJobExp    Int
  skillPoints  Int
  attackType   String
  attackPower  Int
  magicPower   Int
  defense      Int
  magicDefense Int
}

model Enemy {
  id            Int    @id @default(autoincrement())
  name          String @unique
  health        Int
  maxHealth     Int
  baseLevel     Int
  baseExpAmount Int
  jobExpAmount  Int
  attackType    String
  monsterType   String
  attackPower   Int
  magicPower    Int
  defense       Int
  magicDefense  Int
}
